EXTRAMODULES=extramodules-4.16-rt-MANJARO

_updatemod() {
  echo "  > Updating module dependencies..."
  depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}

post_install() {
  getent group cdemu &>/dev/null || groupadd -r cdemu
  _updatemod
}

post_upgrade() {
  post_install
}

post_remove() {
  _updatemod
  groupdel cdemu
}

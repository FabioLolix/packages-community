# Maintainer: Bernhard Landauer <oberon@manjaro.org>
# AUR-Maintainer: Nate Simon <aurpkg (at natesimon.net)>

pkgname=xed
pkgver=1.8.0
pkgrel=1
pkgdesc="A small and lightweight text editor. X-Apps Project"
arch=('i686' 'x86_64')
license=('GPL')
groups=('x-apps')
depends=('desktop-file-utils'
    'enchant'
    'gtksourceview3'
    'libpeas'
    'libsm'
    'xapps')
makedepends=('gnome-common'
    'gobject-introspection'
    'gspell'
    'iso-codes')
url="https://github.com/linuxmint/${pkgname}"
source=("${url}/archive/${pkgver}.tar.gz")
md5sums=('7c78a6f1514cde6e333d4e808ff5bb16')

prepare() {
    cd ${srcdir}/${pkgname}-${pkgver}
    # make launcher distinguishable from gedit
    sed -i 's/Text Editor/Xed Text Editor/' data/xed.desktop.in.in
}

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    ./autogen.sh --with-gtk=3.0 --prefix="/usr" \
         --localstatedir="/var" \
         --libexecdir="/usr/lib/xed"
    make CFLAGS='-w -O2'
}

package(){
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR="$pkgdir/" install
}

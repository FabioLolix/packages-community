# Maintainer: fhdk <fh at manjaro org>

pkgname="manjaro-openbox-scripts"
_gitname="openbox-scripts"
_branch="master"
pkgver=0.9.0
pkgrel=1
pkgdesc="Manjaro Openbox Scripts"
arch=('any')
url="https://github.com/fhdk/${_gitname}"
license=('GPL3')
makedepends=('git')
provides=('manjaro-openbox-scripts')
conflicts=('manjaro-openbox-common')
source=(git+$url.git#branch=${_branch})
makedepends=('git')
sha256sums=('SKIP')

package() {
	install -dm755   ${pkgdir}/usr/lib/manjaro
	install -dm755   ${pkgdir}/usr/share
	install -dm755   ${pkgdir}/usr/bin
	cd ${srcdir}/$_gitname
	cp -r common     ${pkgdir}/usr/lib/manjaro
	cp -r doc        ${pkgdir}/usr/share
	cp -r licenses   ${pkgdir}/usr/share
	cp  scripts/*    ${pkgdir}/usr/bin
}
